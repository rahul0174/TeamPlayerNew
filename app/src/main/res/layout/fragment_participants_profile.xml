<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whit_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_profile_edit"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/profile"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/edit_dark"
                    />

            </RelativeLayout>
            <com.cts.teamplayer.customui.CustomTextviewBold
                android:id="@+id/tv_user_name_in_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text=""
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/im_id"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_im_id_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="@string/name"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_name_in_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="@string/last_name"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_last_name_in_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="@string/email"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_email_in_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="@string/phone"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_phone_in_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="Profession"
                    />
                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/minus"
                    />

                <com.cts.teamplayer.customui.CustomTextView
                    android:id="@+id/tv_profession_in_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="@dimen/_20sdp">
             </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>