<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:scaleType="fitXY"
        android:src="@drawable/register"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_55sdp"
        android:background="@drawable/rounded_whit_btn"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                >
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome User"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up to join"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sdp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:text="@string/participant"
                            android:background="@color/light_blue"
                            />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        >
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:text="@string/orgnization"
                            android:background="@color/light_grey1"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="full name"
                        android:textColorHint="@color/light_grey_new"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:textColorHint="@color/light_grey_new"
                        android:hint="Title"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="Phone No"
                        android:textColorHint="@color/light_grey_new"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:textColorHint="@color/light_grey_new"
                        android:hint="H.No Plot,Area"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="Road Landmark"
                        android:textColorHint="@color/light_grey_new"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <Spinner
                            android:id="@+id/designation_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:entries="@array/selector"
                            android:theme="@style/mySpinnerItemStyle"
                            android:outlineSpotShadowColor="@color/light_grey1"

                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:entries="@array/selector"
                            android:theme="@style/mySpinnerItemStyle"
                            android:outlineSpotShadowColor="@color/light_grey1"

                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:entries="@array/selector"
                            android:theme="@style/mySpinnerItemStyle"
                            android:outlineSpotShadowColor="@color/light_grey1"

                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:entries="@array/selector"
                            android:theme="@style/mySpinnerItemStyle"
                            android:outlineSpotShadowColor="@color/light_grey1"

                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:entries="@array/selector"
                            android:theme="@style/mySpinnerItemStyle"
                            android:outlineSpotShadowColor="@color/light_grey1"

                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="Zip"
                        android:textColorHint="@color/light_grey_new"
                        android:maxLength="6"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="Email"
                        android:textColorHint="@color/light_grey_new"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:hint="Password"
                        android:textColorHint="@color/light_grey_new"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_confrim_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@null"
                        android:textColorHint="@color/light_grey_new"
                        android:hint="Road Landmark"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/rounded_doted_grey_btn">


                    <LinearLayout
                        android:id="@+id/uploadImage"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/iv_profile_pic"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/file"/>
                        <com.cts.teamplayer.customui.CustomTextviewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:layout_gravity="center_vertical"
                            android:text="Upload your resume here"
                            />
                    </LinearLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rounded_doted_btn"
                    >
                    <com.cts.teamplayer.customui.CustomEditText
                        android:id="@+id/edit_im_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey_new"
                        android:background="@null"
                        android:hint="@string/do_you_have_an_im_enter_it_here"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp"
                        />
                </RelativeLayout>
                <CheckBox
                    android:id="@+id/simpleCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/light_grey_new"
                    android:text="@string/agree_to_terms_conditions_and_privacy_policy"/>
                <com.cts.teamplayer.customui.CustomButton
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:background="@color/light_blue"
                    />
                <com.cts.teamplayer.customui.CustomTextviewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="Already have an account? Sign In"
                    />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>