<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:background="@drawable/btn_corner_rounded_1"
        >
        <RelativeLayout
            android:layout_toLeftOf="@+id/rl_delete_benchmark"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="@dimen/_27sdp">

        <com.cts.teamplayer.customui.CustomTextviewBold
            android:id="@+id/tv_name_in_benchmark_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:text="@string/group_list"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rl_delete_benchmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"

            >
            <ImageView
                android:id="@+id/iv_view_report"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/view"
                />
            <ImageView
                android:id="@+id/iv_delete_benchmark"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/delete_new"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>